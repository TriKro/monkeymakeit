- # Bullshit cruft until artwork model is in.
- if @story.title == "Oh, Mighty Hiccup!"
  - @content = "hiccup"
  - @art = { :artwork => "/images/stories/cover-hiccup-chapter1.png",
             :artwork_title => "Untitled",
             :artist => "Tyler Landry"}
- elsif @story.title == "Life of the Gallows"
  - @content = "life_of_the_gallows"
  - @art = { :artwork => "/images/stories/image-life_of_the_gallows.jpg",
             :artwork_title => "Jester",
             :artist => "Tyler Landry"}
- elsif @story.title == "Doris"
  - @content = "doris"
  - @art = { :artwork => "/images/stories/image-doris.jpg",
             :artwork_title => "Doris",
             :artist => "Tyler Landry"}

- title "- " + @story.title + " - " + @story.subtitle
- stylesheets 'stories'
- scripts 'stories'
- fonts 'http://fonts.googleapis.com/css?family=Reenie+Beanie&v2'

#story
  #left_column1
    %h1
      = @story.title
    %h2
      = @story.subtitle


  #right_column1

  .clear

  #left_column2
    .story_pic
      %img{ :src => "#{ @art[:artwork] }" }
      #art_credit
        "
        %b><
          = @art[:artwork_title]
        " by
        = @art[:artist]

    = render "stories/#{ @content }"

    - if current_user && current_user.subscribed?(@story)
      = render :partial => "invites/invite_widget", :locals => { :story => @story, :invite => @invite, :invite_message => @invite_message }
    - else
      .signup_widget_bottom
        .signup_header
          %h2
            Want to read the next chapter?
        = render "subscriptions/subscription_form"

    .darkgrey{ :style => "text-align: center" }
      \- to be continued -
      %br
      %br
      (This is an early draft. More coming soon. Thanks for reading!)
      %br
      %br

  #right_column2
    - if current_user && current_user.subscribed?(@story)
      = render :partial => "invites/invite_widget", :locals => { :story => @story, :invite => @invite, :invite_message => @invite_message }
    - else
      .signup_widget
        .signup_header
          %h4
            %img{ :src => "/images/text/text-next_chapter.png", :alt => "Next Chapter", :title => "Sign Up now!" }
        = render "subscriptions/subscription_form"

    #about_author
      %h4
        %img{ :src => "/images/text/text-abouttheauthor.png", :alt => "About the Author", :title => "About the Author" }
      %author_image
        %span{ :style => "float: left;"}
          %img{:src => @story.author.image, :width => "100px;", :style => "margin: 0 10px 0 0;"}
        %p
          = @story.author.bio
