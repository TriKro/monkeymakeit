= form_for(@story) do |f|
  - if @story.errors.any?
    #error_explanation
      %h4
        = pluralize(@story.errors.count, "error")
        prohibited this story from being saved:
      %ul
        - @story.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :title
    %br/
    = f.text_field :title
  .field
    = f.label :subtitle
    %br/
    = f.text_field :subtitle
  .field
    = f.label :summary
    %br/
    = f.text_area :summary
  .actions
    %span.lowbutton
      = link_to 'Back', :back if :back
    = f.submit