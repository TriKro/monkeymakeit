= title "- Index Stories"

%h1 Listing stories
%table
  %tr
    %th Author
    %th Title
    %th Subtitle
    %th Summary
    %th # of Subscribers
    - if can? :show, @story
      %th
    - if can? :update, @story
      %th
    - if can? :destroy, @story
      %th
  - @stories.each do |story|
    %tr
      %td= link_to story.author.full_name, story.author
      %td= link_to story.title, story
      %td= story.subtitle
      %td= story.summary
      %td= story.subscribers.count
      - if can? :show, @story
        %td
      - if can? :update, @story
        %td= link_to 'Edit', edit_story_path(story)
      - if can? :destroy, @story
        %td= link_to 'Destroy', story, :confirm => 'Are you sure?', :method => :delete

- if can? :create, Story
  = link_to "Create new story", new_story_path