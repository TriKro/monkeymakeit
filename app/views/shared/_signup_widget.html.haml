.signup_widget
  .signup_header
    %h4
      - if session[:monkey_experiment_id] < 10
        %img{ :src => "images/text-signup.png", :alt => "Sign Up", :title => "Sign Up now!" }
      - elsif session[:monkey_experiment_id] == 10
        %img{ :src => "images/text-next_chapter.png", :alt => "Next Chapter", :title => "Sign Up now!" }
  .signup_content
    - if session[:monkey_experiment_id] == 8
      %p
        Want to see your name in print?
      %p
        Invite your friends and get your name printed in the first edition of Doris!

    - elsif session[:monkey_experiment_id] == 9
      %p
        Want a free book?
      %p
        Invite your friends and get a free first edition copy of Doris!

    - elsif session[:monkey_experiment_id] == 10
      %p
        To get the next chapters when it's ready sign up here:

    - @registration = User.new
    = form_for(@registration, :url => registrations_path, :html => { :class => "event_form_email_login" }) do |f|
      - if @registration.errors.any?
        #error_explanation
          %h4
            = pluralize(@registration.errors.count, "error")
            prohibited this tag from being saved:
          %ul
            - @registration.errors.full_messages.each do |msg|
              %li= msg

      .field
        = f.label :full_name, "Name:"
        = f.text_field :full_name, :class => "user_full_name", :value => params[:user].try(:[], :full_name).presence || "Name"

      .field
        = f.label :email, "Email:"
        = f.text_field :email, :class => "user_email", :value => params[:user].try(:[], :email).presence || "Email"

      .actions
        = f.submit ''
      .clear