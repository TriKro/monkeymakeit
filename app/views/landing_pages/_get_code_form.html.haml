#signup_box
  = form_for(@user, :url => code_path) do |f|
    - if @user.errors.any?
      #error_explanation
        %h4
          = pluralize(@user.errors.count, "error")
          prohibited this tag from being saved:
        %ul
          - @user.errors.full_messages.each do |msg|
            %li= msg

    .field
      = f.label :email, "Email:"
      = f.text_field :email, :value => "Enter your email for custom code"

    .actions
      = f.submit ''
    .clear