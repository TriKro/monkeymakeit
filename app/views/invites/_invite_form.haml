.left_column.email
  %h3
    Email your friends:

.right_column.email
  = render :partial => 'invites/invite_by_email_form', :locals => { :invite_message => invite_message, :invite => invite }
.clear

.left_column.share
  %h3
    Share this story:
.right_column.share
  %span#sharing
    = render :partial => "invites/sharing", :locals => { :share => { :url => "http://monkeymake.it/i/#{invite.code}", :content => 'Check out this first draft chapter of "Oh, Mighty Hiccup!" by Scott Lambridis. #books', :faces => "false", :width => "70px", :count => "none", :recommend => true } }
.clear

.left_column.link
  %h3
    Or copy and paste this link:
.right_column.link
  #invite_code
    %input{:type => "text", :value => "http://monkeymake.it/i/#{invite.code}"}
.clear
