#signup_form
  = form_for(@user, :url => { :action => "create" }) do |f|
    #fields
      - if @user.errors.any?
        #error_explanation
          = @user.errors.full_messages.first

      #signup_field_name.field
        = f.label :full_name, "Name"
        - if @user.full_name.blank?
          = f.text_field :full_name, :value => "Name", :id => "signup_name"
        - else
          = f.text_field :full_name, :id => "signup_name"

      #signup_field_email.field
        = f.label :email, "Email:"
        - if @user.email.blank?
          = f.text_field :email, :value => "Email", :id => "signup_email"
        - else
          = f.text_field :email, :id => "signup_email"

    .actions
      = f.submit ''
      %br
      .company_id
        %span.powered_by
          brought to you by
        %span.company_name
          MonkeyMake.it
    .clear
