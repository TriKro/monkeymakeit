= title "- Index Authentications"

%h1 Listing Authentications
%table
  %tr
    %th User ID
    %th User
    %th Provider
    %th UID
    - if can? :destroy, @authenticaion
      %th
  - @authentications.each do |authentication|
    %tr
      %td
        - if !authentication.user.blank?
          = link_to authentication.user do
            - if !authentication.user.full_name.blank?
              = authentication.user.full_name
            - else
              =authentication.user.id
      %td= authentication.provider
      %td= authentication.uid
      - if can? :destroy, @authenticaion
        %td= link_to 'Destroy', authentication, :confirm => 'Are you sure?', :method => :delete