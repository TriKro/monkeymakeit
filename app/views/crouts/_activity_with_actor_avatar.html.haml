.activity.event_clicked_activity
  .activity_pic
    %img{:src => "#{activity[:actor_avatar]}"}
  .activity_content
    %p.summary
      %span.actor
        = activity[:actor]
      %span.verb
        = activity[:verb]

      %span.object
        = activity[:object]

      %br
    %p.details
      = activity[:details]

    %p.timestamp
      = activity[:timestamp]

  .clear
