- if session[:experiments]['sign up method'].nil? || session[:experiments]['sign up method'][:version] == 'email'
  = render 'sessions/signup_with_email_form'

- elsif session[:experiments]['sign up method'][:version] == 'facebook'
  = link_to("/auth/facebook", :class => "nodec") do
    .signin_facebook

- elsif session[:experiments]['signup method'] == 'twitter'
  = link_to("/auth/twitter", :class => "nodec") do
    .signin_twitter

- elsif session[:experiments]['sign up method'][:version] == 'facebook and twitter'
  = link_to("/auth/facebook", :class => "nodec") do
    .signin_facebook
  = link_to("/auth/twitter", :class => "nodec") do
    .signin_twitter

- elsif session[:experiments]['sign up method'][:version] == 'twitter and facebook'
  = link_to("/auth/twitter", :class => "nodec") do
    .signin_twitter
  = link_to("/auth/facebook", :class => "nodec") do
    .signin_facebook

- elsif session[:experiments]['sign up method'][:version] == 'facebook, twitter, and email'
  = link_to("/auth/facebook", :class => "nodec") do
    .signin_facebook
  = link_to("/auth/twitter", :class => "nodec") do
    .signin_twitter
  = render 'sessions/signup_with_email_form'