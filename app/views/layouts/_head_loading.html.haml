%title
  MonkeyMake.it
  = yield :title

%link(rel='icon' href='/favicon.ico')
%link(rel='shortcut icon' href='/favicon.ico')

- stylesheets = yield :stylesheets
- if !stylesheets.blank?
  = stylesheet_link_tag stylesheets
= javascript_include_tag :defaults
= javascript_include_tag 'notifications'
- scripts = yield :scripts
- if !scripts.blank?
  = javascript_include_tag scripts
- fonts = yield :fonts
- if !fonts.blank?
  %link{:href => "#{ yield :fonts }", :rel => "stylesheet", :type => "text/css"}/
= csrf_meta_tag