- @registration = User.new
#registration
  = form_for(@registration, :url => registrations_path) do |f|
    - if @registration.errors.any?
      #error_explanation
        %h4
          = pluralize(@registration.errors.count, "error")
          prohibited this tag from being saved:
        %ul
          - @registration.errors.full_messages.each do |msg|
            %li= msg


    .field
      = f.label :full_name, "Name:"
      = f.text_field :full_name, :value => "Name"

    .field
      = f.label :email, "Email:"
      = f.text_field :email, :value => "Email"

    .actions
      = f.submit ''
    .clear