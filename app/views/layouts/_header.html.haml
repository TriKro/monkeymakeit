%header
  %header_inner
    = link_to root_path, :id => 'home_link' do
      %logo
      .top_menu
        - if current_user
          - if !current_user.avatar_remote_url.blank?
            %img{ :src => current_user.avatar_remote_url, :style => "width: 25px; vertical-align: middle;" }
          - if !current_user.full_name.blank?
            = current_user.full_name
            &#8226;
          = link_to "Sign Out", signout_path

        - else
          = link_to "About", :about
          &#8226;
          = link_to "Contact", :contact
          &#8226;
          %span.join_modal
            Sign in