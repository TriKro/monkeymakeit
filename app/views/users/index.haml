= title "- Index Users"

%h1 Listing users
%table
  %tr
    %th Name
    %th Email
    %th Access
    %th # of Subscriptions
    %th # of Invitees
    - if can? :show, @user
      %th
    - if can? :update, @user
      %th
    - if can? :destroy, @user
      %th
  - @users.each do |user|
    %tr
      %td= link_to user.identifier, user
      %td= user.email
      %td= user.access
      %td{ :style => "text-align: center;"}= user.subscriptions.count
      %td{ :style => "text-align: center;"}= user.invitees.count
      - if can? :update, @user
        %td= link_to 'Edit', edit_user_path(user)
      - if can? :destroy, @user
        %td= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete