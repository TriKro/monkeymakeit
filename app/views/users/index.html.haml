= title "- Index Users"

%h1 Listing users
%table
  %tr
    %th Name
    %th Email
    %th Access
    %th # Invited
    - if can? :show, @user
      %th
    - if can? :update, @user
      %th
    - if can? :destroy, @user
      %th
  - @users.each do |user|
    %tr
      %td= user.id
      %td= user.full_name
      %td= user.email
      %td= user.access
      %td= user.invitees.count
      - if can? :show, @user
        %td= link_to 'Show', user
      - if can? :update, @user
        %td= link_to 'Edit', edit_user_path(user)
      - if can? :destroy, @user
        %td= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete