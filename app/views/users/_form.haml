= form_for(@user) do |f|
  - if @user.errors.any?
    #error_explanation
      %h4
        = pluralize(@user.errors.count, "error")
        prohibited this user from being saved:
      %ul
        - @user.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :email
    %br/
    = f.text_field :email
  .field
    = f.label :image
    %br/
    = f.text_field :image
  .field
    = f.label :access
    %br/
    = f.text_field :access
  .field
    = f.label :bio
    %br/
    = f.text_area :bio
  .actions
    %span.lowbutton
      = link_to 'Back', :back if :back
    = f.submit